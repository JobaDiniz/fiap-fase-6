{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "storeContext": "mongodb://root:example@mongo:27017/iFoodReview?authSource=admin"
  },
  "Kafka": {
    "Topic": "iFood.store",
    "Consumer": {
      "BootstrapServers": "kafka:9092",
      "AutoOffsetReset": "Earliest",
      "GroupId": "iFood-reviews-consumer"
    }
  }
}
